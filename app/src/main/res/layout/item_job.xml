<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="175dp">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="0dp"
        android:layout_height="135dp"
        android:layout_marginStart="8dp"

        android:layout_marginEnd="8dp"
        android:background="@drawable/container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
      />



    <ImageView
        android:id="@+id/logoimgintern"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_marginStart="24dp"
        android:transitionName="sharedpic"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/apple_logo" />
    <TextView
        android:id="@+id/companyi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:text="Apple"
        app:layout_constraintStart_toEndOf="@+id/logoimgintern"
        app:layout_constraintTop_toTopOf="@+id/imageView1" />

    <TextView
        android:id="@+id/intern_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Job Title"
        app:layout_constraintStart_toEndOf="@+id/logoimgintern"
        app:layout_constraintTop_toBottomOf="@+id/companyi" />

    <RatingBar
        style="?android:attr/ratingBarStyleSmall"
        android:id="@+id/ratingBari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/logoimgintern"
        app:layout_constraintTop_toBottomOf="@+id/intern_title" />

    <TextView
        android:id="@+id/item_scorei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Score"
        app:layout_constraintBottom_toBottomOf="@+id/ratingBari"
        app:layout_constraintStart_toEndOf="@+id/ratingBari"
        app:layout_constraintTop_toBottomOf="@+id/intern_title" />

    <TextView
        android:id="@+id/ratingvaluei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="10 Ratings"
        app:layout_constraintBottom_toBottomOf="@+id/ratingBari"
        app:layout_constraintStart_toEndOf="@+id/item_scorei"
        app:layout_constraintTop_toBottomOf="@+id/intern_title" />

    <ImageView
        android:tint="@color/fav_icon_color"
        android:id="@+id/fav_imgi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView1"
        app:srcCompat="@drawable/ic_favorite_black_24dp" />
</androidx.constraintlayout.widget.ConstraintLayout>